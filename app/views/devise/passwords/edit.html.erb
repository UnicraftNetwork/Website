<div class="container">

  <h4>Cambiar contraseña</h4>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row">
      <div class="col-md-5">
        <div class="form-group">
          <div class="input-group">
            <% if @minimum_password_length %>
              <%= f.password_field :password, autofocus: true, :placeholder => "Nueva contraseña (#{@minimum_password_length} caracteres mínimo)", autocomplete: "new-password", :class => 'form-control devise-form-field' %>
            <% else %>
              <%= f.password_field :password, autofocus: true, :placeholder => 'Nueva contraseña', autocomplete: "new-password", :class => 'form-control devise-form-field' %>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <%= f.password_field :password_confirmation, :placeholder => 'Confirmar nueva contraseña', autocomplete: "new-password", :class => 'form-control devise-form-field' %>
          </div>
        </div>

      </div>
    </div>

    <div class="actions">
      <%= f.submit "Cambiar contraseña", :class => 'btn btn-primary' %>
    </div>
  <% end %>

  <br/>

  <%= render "devise/shared/links" %>

</div>
