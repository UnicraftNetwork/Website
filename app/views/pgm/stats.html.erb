<div class="container">
  <h2>
    Estad√≠sticas
    <small>
      Ordenadas por:
      <!-- Due to a weird behaviour when using css, this styles declaration for <select/>
       remains beneath, along with the usual evasion of <label/> due to the misplacement of elements
       -->
      <select style="border-color: gray; color: #bdbdbd; background-color: #212121; display: inline-block; width: 130px; cursor: pointer;"
              id="sorter" class="form-control">
        <% @sorts.each do |key, label| %>
          <% if params[:sort].eql?(key.to_s) %>
            <option selected="selected" label="<%= label %>" value="<%= full_url_for :sort => key %>"><%= label %></option>
          <% else %>
            <option label="<%= label %>" value="<%= full_url_for :sort => key %>"><%= label %></option>
          <% end %>
        <% end %>
      </select>
    </small>

  </h2>

  <hr/>
  <br/>

  <%= render :partial => 'stats_table' %>

  <br/>
</div>

<script type="text/javascript">
    var select = document.getElementById('sorter');

    select.onchange = function () {
        var option = this.options[this.selectedIndex];
        window.location.replace(option.value)
    }
</script>
