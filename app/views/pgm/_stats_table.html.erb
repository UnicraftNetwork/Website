<div class="table-responsive">

  <%= paginate @pgm_records %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th width="5%">#</th>
        <th width="13%">Kills</th>
        <th width="13%">Deaths</th>
        <th width="10%">KD Ratio</th>
        <th width="10%">KK Ratio</th>
        <th width="7%">Wools</th>
        <th width="7%">Monuments</th>
        <th width="7%">Cores</th>
        <th width="30%">Usuario</th>
      </tr>
    </thead>
    <tbody>
      <% @pgm_records.each do |record| %>
        <% @count += 1 %>
        <tr>
          <td><%= @count - 1 %></td>
          <td><%= record.kills %></td>
          <td><%= record.deaths %></td>
          <td><%= number_with_precision(record.kd, :precision => 3) %></td>
          <td><%= number_with_precision(record.kk, :precision => 3) %></td>
          <td><%= record.wools %></td>
          <td><%= record.monuments %></td>
          <td><%= record.cores %></td>
          <% profile_link = uuid_to_profile_link(record.uuid) %>
          <td><img class="stats-head-entry" src="<%= Minecraft::Data.head_url_of_uuid(record.uuid) %>" alt="" />
            <% if profile_link.nil? %>
              <%= record.nick %>
            <% else %>
              <a style="color: <%= username_color_of_uuid(record.uuid) %>" href="<%= profile_link %>">
                <%= record.nick %>
              </a>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @pgm_records %>

</div>
