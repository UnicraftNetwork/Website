<script>
    $(document).ready(function(){
        $('[data-toggle="popover"]').popover();
    });
</script>

<div class="container">
  <div class="row">
    <% @towns.each do |town| %>
      <div class="col-md-4">
        <div class="card bg-dark">
          <%= image_tag("towny_background.png", class: "card-img-top") %>
          <h5 class="card-header">
            <a class="collapsed d-block" data-toggle="collapse" href="#<%= town.name.gsub(' ', '-') %>" aria-expanded="true" aria-controls="collapse-collapsed" id="heading-collapsed">
              <i class="fa fa-chevron-down pull-right"></i>
              <%= town.name %>
            </a>
          </h5>
          <div id="<%= town.name.gsub(' ', '-') %>" class="collapse" aria-labelledby="heading-collapsed">
            <div class="card-body text-white">
              <hr/>
              <% unless town.nation.eql?('') %>
                <p><b>Naci√≥n: </b>
                  <%=  town.nation  %>
                </p>
              <% end %>
              <% unless town.townBoard.eql?('/town set board [msg]') or town.townBoard.eql?('')%>
                <p><b>Board: </b>
                  <%=  town.townBoard  %>
                </p>
              <% end %>
              <p><b>Alcalde: </b>
                <a style="cursor: pointer" data-toggle="popover" data-content="<%=  town.mayor  %>" data-placement="top">
                  <img class="mayor-entry" src="<%= Minecraft::Data.head_url_of_username(town.mayor) %>" title="<%= town.mayor %>" alt="https://api.ashcon.app/mojang/v2/avatar/Steve">
                </a>
              </p>
              <hr/>
              <p><b>Residentes: </b>
              </p>
              <div class="row">
                <% town.residents.split('#') do |resident| %>
                  <div class="col-md-1 col-sm-6 resident-entry">
                    <a style="cursor: pointer" data-toggle="popover" data-content="<%=  resident  %>" data-placement="top">
                      <img src="<%= Minecraft::Data.head_url_of_username(resident) %>" alt="https://api.ashcon.app/mojang/v2/avatar/Steve">
                    </a>
                  </div>
                <% end %>
              </div>
              <hr/>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
