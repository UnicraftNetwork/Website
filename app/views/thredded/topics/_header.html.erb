<header class="thredded--topic-header">

  <div class="row">
    <nav class="navbar navbar-expand-lg navbar-dark topic-toolbar">
      <div class="col-xl-11 col-lg-10">
        <%= view_hooks.topic_page.title.render self, topic: topic do %>
          <h3><%= link_to topic.title, topic.path %><small>, por <%= user_link(topic.user) %>
              <% if topic.locked? %>
                <i data-toggle="tooltip" data-placement="top" title="<%= t('thredded.topics.locked.label') %>" class="fa fa-lock" aria-hidden="true"></i>
              <% end %>
              <% if topic.sticky? %>
                <i data-toggle="tooltip" data-placement="top" title="<%= t('thredded.topics.sticky.label') %>" class="fa fa-thumb-tack" aria-hidden="true"></i>
              <% end %>
            </small>
          </h3>
        <% end %>
      </div>

      <div class="col-xl-1 col-lg-2">
        <ul class="navbar-nav">
          <li class="dropdown">
            <a style="width: 50px; padding-left: 5px;" class="dropdown-toggle nav-link" data-toggle="dropdown" href="#">
              <i class="fa fa-cog" aria-hidden="true"></i>
              <b class="caret"></b>
            </a>
            <div style="width: 50px;" class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown01">
              <% if user_signed_in? and (current_user.admin? or current_user.mod?) %>
                <a class="dropdown-item" href="<%= topic.edit_path %>" rel="nofollow"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> <%= t('thredded.topics.edit') %></a>
              <% end %>
              <% if topic.can_destroy? %>
                <a class="dropdown-item" href="<%= topic.destroy_path %>" data-method="delete" data-confirm="¿Seguro que queires eliminar este tema? Esta acción NO se puede deshacer."><i class="fa fa-trash-o" aria-hidden="true"></i> <%= t('thredded.topics.delete_topic') %></a>
              <% end %>
              <% if thredded_current_user %>
                <% if topic.followed? %>
                  <a class="dropdown-item" href="<%= topic.unfollow_path %>" data-toggle="tooltip" title="<%= topic_follow_reason_text topic.follow_reason %>" data-placement="top"><i class="fa fa-bell-slash" aria-hidden="true"></i> <%= t('thredded.topics.unfollow') %></a>
                <% else %>
                  <a class="dropdown-item" href="<%= topic.follow_path %>" data-toggle="tooltip" title="<%= topic_follow_reason_text topic.follow_reason %>" data-placement="top"><i class="fa fa-bell" aria-hidden="true"></i> <%= t('thredded.topics.follow') %></a>
                <% end %>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </div>

  <%= render partial: 'thredded/topics/followers', locals: {topic: topic} %>
</header>
