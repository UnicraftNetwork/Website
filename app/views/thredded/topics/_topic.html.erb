<%= content_tag :article,
                id:    dom_id(topic),
                data: {
                    topic: topic.id,
                    messageboard: topic.messageboard_id,
                    unread: !topic.read? || nil,
                    followed: topic.followed? || nil
                } do
%>
  <tr>
    <td>
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <%= link_to topic.title, topic.path %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <div class="post-head-preview">
              <a href="<%= user_path topic.user %>"><img src="<%= Minecraft::Data.head_url_of_uuid(current_user.uuid) %>"></a>
            </div>
          </div>
          <div class="col-xs-6">
            <%= link_to topic.user.name, user_path(topic.user), :class => 'poster-preview' %> âž”&nbsp;
          </div>
          <div class="col-xs-6">
            <%= time_ago(topic.created_at) %>
          </div>
        </div>
      </div>
    </td>
    <td>
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <div class="post-head-preview">
              <a href="<%= user_path topic.user %>"><img src="<%= Minecraft::Data.head_url_of_uuid(current_user.uuid) %>"></a>
            </div>
          </div>
          <div class="col-xs-6">
            <%= link_to topic.last_user.name, user_path(topic.last_user), :class => 'poster-preview' %>
          </div>
          <%= time_ago topic.last_post_at %>
        </div>
      </div>
    </td>
    <td><div align="center"><%= topic.posts_count %></div></td>
  </tr>
<% end %>
