<%= content_tag :article,
                id:    dom_id(topic),
                data: {
                    topic: topic.id,
                    messageboard: topic.messageboard_id,
                    unread: !topic.read? || nil,
                    followed: topic.followed? || nil
                } do
%>
  <tr>
    <td>
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <%= link_to topic.title, topic.path %>
            <% if topic.locked? %>
              <i data-toggle="tooltip" data-placement="top" title="<%= t('thredded.topics.locked.message') %>" class="fa fa-lock" aria-hidden="true"></i>
            <% end %>
            <% if topic.sticky? %>
              <i data-toggle="tooltip" data-placement="top" title="<%= t('thredded.topics.sticky.label') %>" class="fa fa-thumb-tack" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <div class="post-head-preview">
              <a href="<%= user_path topic.user %>"><img src="<%= Minecraft::Data.head_url_of_uuid(topic.user.uuid) %>"></a>
            </div>
          </div>
          <div class="col-xs-6">
            <rem class="poster-preview"><%= user_link topic.user %></rem> âž”&nbsp;
          </div>
          <div class="col-xs-6">
            <%= time_ago(topic.created_at) %>
          </div>
        </div>
      </div>
    </td>
    <td>
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <div class="post-head-preview">
              <a href="<%= user_path topic.user %>"><img src="<%= Minecraft::Data.head_url_of_uuid(topic.last_user.uuid) %>"></a>
            </div>
          </div>
          <div class="col-xs-6">
            <rem class="poster-preview"><%= user_link topic.last_user %></rem>
          </div>
          &nbsp;<%= time_ago topic.last_post_at %>
        </div>
      </div>
    </td>
    <td>
      <div align="center"><%= topic.posts_count %></div>
    </td>
  </tr>
<% end %>
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
