<%# @param post [Thredded::PostView] %>
<!-- A post by a user, at any topic -->
<header>
  <hr/>
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="post-head">
          <a href="<%= user_path post.user %>"><img src="<%= Minecraft::Data.head_url_of_uuid(current_user.uuid) %>"></a>
        </div>
      </div>
      <div class="col-xs-6">
        <h5 class="post-comment">
          <%= user_link post.user %>
        </h5>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <p class="posted-time-ago">poste√≥ <%= time_ago post.created_at %></p>
      </div>
    </div>
  </div>
</header>
